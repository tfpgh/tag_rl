<mujoco model="agent">
	<asset>
		<material name="chassis_base" rgba="0.1 0.1 0.1 1" />
		<material name="chassis_top" rgba="1.0 1.0 1.0 1" />
		<material name="wheel" rgba="0.6 0.6 0.6 1" />
		<material name="caster" rgba="0.6 0.6 0.6 1" />
	</asset>
	<worldbody>
		<body name="agent" pos="0 0 0.0299">
		    <freejoint name="agent_root" />
		    <inertial
                pos="-0.0148 0 -0.009"
                diaginertia="0.000112 0.000112 0.000188"
                mass="0.15"
            />
			<geom
                name="chassis_base"
                type="cylinder"
                size="0.05 0.019"
                material="chassis_base"
            />
			<geom
                name="chassis_top"
                type="cylinder"
                pos="0 0 0.0205"
                size="0.05 0.0015"
                material="chassis_top"
            />

            <body name="left_wheel" pos="0 0.037123 -0.0099">
                <joint name="left_wheel_joint" type="hinge" axis="0 1 0" />
                <geom
                    name="left_wheel_geom"
                    type="cylinder"
                    size="0.020 0.0015"
                    euler="90 0 0"
                    mass="0.00425"
                    material="wheel"
                    friction="1.0 0.005 0.0001"
                />
            </body>

            <body name="right_wheel" pos="0 -0.037123 -0.0099">
                <joint name="right_wheel_joint" type="hinge" axis="0 1 0" />
                <geom
                    name="right_wheel_geom"
                    type="cylinder"
                    size="0.020 0.0015"
                    euler="90 0 0"
                    mass="0.00425"
                    material="wheel"
                    friction="1.0 0.005 0.0001"
                />
            </body>

            <body name="caster" pos="-0.037 0 -0.0251">
                <geom
                    name="caster_housing"
                    type="box"
                    size="0.006 0.006 0.004"
                    pos="0 0 0.004"
                    mass="0.004"
                    material="chassis_base"
                />

                <body name="caster_ball" pos="0 0 0">
                    <joint
                        name="caster_ball_joint"
                        type="ball"
                        damping="0.0001"
                    />
                    <geom
                        name="caster_ball_geom"
                        type="sphere"
                        size="0.0048"
                        mass="0.002"
                        material="caster"
                        friction="0.3 0.005 0.0001"
                    />
                </body>
            </body>
		</body>
	</worldbody>
	<actuator>
	<motor
            name="left_motor"
            joint="left_wheel_joint"
            gear="0.12"
            ctrlrange="-1 1"
            ctrllimited="true"
        />
    <motor
            name="right_motor"
            joint="right_wheel_joint"
            gear="0.15"
            ctrlrange="-1 1"
            ctrllimited="true"
        />
    </actuator>
    <sensor>
        <framepos name="agent_pos" objtype="body" objname="agent" />
        <framequat name="agent_quat" objtype="body" objname="agent" />
        <framelinvel name="agent_vel" objtype="body" objname="agent" />
        <frameangvel name="agent_angvel" objtype="body" objname="agent" />
    </sensor>
</mujoco>
